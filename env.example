# Database Configuration
# Для використання зовнішнього PostgreSQL (встановленого нативно на VPS):
DATABASE_URL=postgresql://whisperflow_user:whisperflow_password@localhost:5432/whisperflow_db

# Або для PostgreSQL в Docker контейнері (якщо використовуєте docker-compose з контейнером db):
# DATABASE_URL=postgresql://whisperflow_user:whisperflow_password@db:5432/whisperflow

# Примітка: docker-compose.yml налаштований для зовнішнього PostgreSQL з network_mode: host
# Якщо потрібно використовувати PostgreSQL в Docker, змініть docker-compose.yml

# PostgreSQL Password (для docker-compose)
POSTGRES_PASSWORD=whisperflow_password

# Secret Key для JWT токенів (мінімум 32 символи)
# Згенеруйте випадковий ключ: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-random-secret-key-minimum-32-characters

# Port (зазвичай 8000)
PORT=8000

# Environment (production, development)
ENVIRONMENT=production




